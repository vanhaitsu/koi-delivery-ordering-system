@model IEnumerable<KoiDeliveryOrderingSystem.MVCWebApp.Models.ShipmentOrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Shipment Order Detail</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get" class="p-4 bg-light shadow-sm rounded">
    <!-- Search Input -->
    <div class="mb-3">
        <label for="search" class="form-label fw-bold">Order Detail ID</label>
        <input type="text" name="search" id="search" value="@ViewBag.Search" placeholder="Enter order detail ID" class="form-control border border-primary rounded-pill" />
    </div>

    <!-- Order Status Select -->
    <div class="mb-3">
        <label for="OrderStatus" class="form-label fw-bold">Select Order Status</label>
        <select class="form-select border border-primary rounded-pill" id="OrderStatus" name="status">
            <option value="" selected>Select status</option>
            <option value="Pending">Pending</option>
            <option value="Shipped">Shipped</option>
            <option value="Deliveried">Deliveried</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <!-- Sort by Date of Entry -->
    <div class="mb-3">
        <label for="orderByDescending" class="form-label fw-bold">Sort by Date of Entry</label>
        <select class="form-select border border-primary rounded-pill" name="orderByDescending" id="orderByDescending" aria-label="Sort order">
            <option value="" selected>Select sort order</option>
            <option value="false">Ascending</option>
            <option value="true">Descending</option>
        </select>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
        <input type="submit" value="Search" class="btn btn-primary btn-lg rounded-pill px-4" />
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShipmentOrderDetailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipmentOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalServices)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfEntry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HealthStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achievement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipmentOrderDetailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipmentOrder.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalType.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AdditionalServices)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEntry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HealthStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Achievement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShipmentOrderDetailId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ShipmentOrderDetailId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ShipmentOrderDetailId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container mt-4 d-flex justify-content-center">
    @if (ViewBag.TotalCount > 0)
    {
        var totalPages = (int)Math.Ceiling((double)ViewBag.TotalCount / 10);
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-route-pageNumber="@i" asp-route-search="@ViewBag.Search" asp-route-order="@ViewBag.Order" asp-route-orderByDescending="@ViewBag.OrderByDescending">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>


