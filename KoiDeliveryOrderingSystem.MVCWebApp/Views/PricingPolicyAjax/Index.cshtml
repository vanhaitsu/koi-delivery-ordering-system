@{
    ViewData["Title"] = "Pricing Policies";
}

<h1>Pricing Policies</h1>

<!-- Create Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">
    Create New
</button>

<!-- Create Modal -->
<div class="modal fade" id="create" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createModalLabel">Create Policy</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    <div class="form-group">
                        <label for="pricingId" class="control-label">Pricing ID</label>
                        <input type="number" id="pricingId" class="form-control" required />
                        <span class="text-danger" id="pricingIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="weightRange" class="control-label">Weight Range</label>
                        <input type="text" id="weightRange" class="form-control" required />
                        <span class="text-danger" id="weightRangeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="shippingMethod" class="control-label">Shipping Method</label>
                        <input type="text" id="shippingMethod" class="form-control" required />
                        <span class="text-danger" id="shippingMethodError"></span>
                    </div>
                    <div class="form-group">
                        <label for="basePrice" class="control-label">Base Price</label>
                        <input type="number" id="basePrice" class="form-control" required />
                        <span class="text-danger" id="basePriceError"></span>
                    </div>
                    <div class="form-group">
                        <label for="additionalServicePrice" class="control-label">Additional Service Price</label>
                        <input type="number" id="additionalServicePrice" class="form-control" required />
                        <span class="text-danger" id="additionalServicePriceError"></span>
                    </div>
                    <div class="form-group">
                        <label for="insuranceFee" class="control-label">Insurance Fee</label>
                        <input type="number" id="insuranceFee" class="form-control" />
                        <span class="text-danger" id="insuranceFeeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="customsFee" class="control-label">Customs Fee</label>
                        <input type="number" id="customsFee" class="form-control" />
                        <span class="text-danger" id="customsFeeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="currency" class="control-label">Currency</label>
                        <input type="text" id="currency" class="form-control" />
                        <span class="text-danger" id="currencyError"></span>
                    </div>
                    <div class="form-group">
                        <label for="effectiveDate" class="control-label">Effective Date</label>
                        <input type="date" id="effectiveDate" class="form-control" />
                        <span class="text-danger" id="effectiveDateError"></span>
                    </div>
                    <div class="form-group">
                        <label for="expiryDate" class="control-label">Expiry Date</label>
                        <input type="date" id="expiryDate" class="form-control" />
                        <span class="text-danger" id="expiryDateError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="button" value="Create" class="btn btn-primary" onclick="submitForm()" />
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editModalLabel">Edit Policy</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editPricingId" />
                    <div class="form-group">
                        <label for="editPricingId" class="control-label">Pricing ID</label>
                        <select id="editPricingId" class="form-control" required></select>
                        <span class="text-danger" id="editPricingIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="weightRange" class="control-label">Weight Range</label>
                        <input type="text" id="weightRange" class="form-control" required />
                        <span class="text-danger" id="weightRangeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="shippingMethod" class="control-label">Shipping Method</label>
                        <input type="text" id="shippingMethod" class="form-control" required />
                        <span class="text-danger" id="shippingMethodError"></span>
                    </div>
                    <div class="form-group">
                        <label for="basePrice" class="control-label">Base Price</label>
                        <input type="number" id="basePrice" class="form-control" required />
                        <span class="text-danger" id="basePriceError"></span>
                    </div>
                    <div class="form-group">
                        <label for="additionalServicePrice" class="control-label">Additional Service Price</label>
                        <input type="number" id="additionalServicePrice" class="form-control" required />
                        <span class="text-danger" id="additionalServicePriceError"></span>
                    </div>
                    <div class="form-group">
                        <label for="insuranceFee" class="control-label">Insurance Fee</label>
                        <input type="number" id="insuranceFee" class="form-control" />
                        <span class="text-danger" id="insuranceFeeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="customsFee" class="control-label">Customs Fee</label>
                        <input type="number" id="customsFee" class="form-control" />
                        <span class="text-danger" id="customsFeeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="currency" class="control-label">Currency</label>
                        <input type="text" id="currency" class="form-control" />
                        <span class="text-danger" id="currencyError"></span>
                    </div>
                    <div class="form-group">
                        <label for="effectiveDate" class="control-label">Effective Date</label>
                        <input type="date" id="effectiveDate" class="form-control" />
                        <span class="text-danger" id="effectiveDateError"></span>
                    </div>
                    <div class="form-group">
                        <label for="expiryDate" class="control-label">Expiry Date</label>
                        <input type="date" id="expiryDate" class="form-control" />
                        <span class="text-danger" id="expiryDateError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="button" value="Save Changes" class="btn btn-primary" onclick="updateHealthCheck()" />
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="details" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="detailsModalLabel">Policy Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmation" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteConfirmationLabel">Confirm Deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this policy?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Policy ID</th>
            <th>Weight Range</th>
            <th>Shipping Method</th>
            <th>Base Price</th>
            <th>Additional Service Price</th>
            <th>Insurance Fee</th>
            <th>Customs Fee</th>
            <th>Currency</th>
            <th>Effective Date</th>
            <th>Expiry Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="PricingPolicies"></tbody>
</table>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loadData();
        });

        function loadData() {
            $.ajax({
                url: 'https://localhost:7122/api/PricingPolicy',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + item.pricingId + '</td>';
                        html += '<td>' + item.weightRange + '</td>';
                        html += '<td>' + item.shippingMethod + '</td>';
                        html += '<td>' + item.basePrice + '</td>';
                        html += '<td>' + item.additionalServicePrice + '</td>';
                        html += '<td>' + item.insuranceFee + '</td>';
                        html += '<td>' + item.customsFee + '</td>';
                        html += '<td>' + item.currency + '</td>';
                        html += '<td>' + new Date(item.effectiveDate).toLocaleString() + '</td>';
                        html += '<td>' + new Date(item.expiryDate).toLocaleString() + '</td>';
                        html += '<td>';
                        html += `<a href="#" onclick="showEditModal(${item.pricingId})">Edit</a> | `;
                        html += `<a href="#" onclick="showDetailsModal(${item.pricingId})">Details</a> | `;
                        html += `<a href="#" data-bs-toggle="modal" data-bs-target="#deleteConfirmation" onclick="deleteHealthCheck(${item.pricingId})">Delete</a>`;
                        html += '</td>';
                        html += '</tr>';
                    });
                    $('.PricingPolicies').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function submitForm() {
            const formData = {
                PricingId: $('#pricingId').val(),
                WeightRange: $('#weightRange').val(),
                ShippingMethod: $('#shippingMethod').val(),
                BasePrice: $('#basePrice').val(),
                AdditionalServicePrice: $('#additionalServicePrice').val(),
                InsuranceFee: $('#insuranceFee').val(),
                CustomsFee: $('#customsFee').val(),
                Currency: $('#currency').val(),
                EffectiveDate: $('#effectiveDate').val(),
                ExpiryDate: $('#expiryDate').val(),
            };

            $.ajax({
                url: 'https://localhost:7122/api/HealthChecks',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#create').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function showEditModal(healthCheckId) {
            $.ajax({
                url: `https://localhost:7122/api/PricingPolicy/${pricingId}`,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $('#editPricingId').val(data.data.pricingId);
                    $('#editWeightRange').val(data.data.weightRange);
                    $('#editShippingMethod').val(data.data.shippingMethod);
                    $('#editBasePrice').val(data.data.basePrice);
                    $('#editAdditionalServicePrice').val(data.data.additionalServicePrice);
                    $('#editInsuranceFee').val(data.data.insuranceFee);
                    $('#editCustomsFee').val(data.data.customsFee);
                    $('#editCurrency').val(data.data.currency);
                    $('#editEffectiveDate').val(data.data.effectiveDate);
                    $('#editExpriryDate').val(data.data.expiryDate);
                    $('#edit').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function updateHealthCheck() {
            const formData = {
                PricingId: $('#pricingId').val(),
                WeightRange: $('#weightRange').val(),
                ShippingMethod: $('#shippingMethod').val(),
                BasePrice: $('#basePrice').val(),
                AdditionalServicePrice: $('#additionalServicePrice').val(),
                InsuranceFee: $('#insuranceFee').val(),
                CustomsFee: $('#customsFee').val(),
                Currency: $('#currency').val(),
                EffectiveDate: $('#effectiveDate').val(),
                ExpiryDate: $('#expiryDate').val(),
            };

            $.ajax({
                url: `https://localhost:7122/api/PricingPolicy/${formData.PricingId}`,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#edit').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function showDetailsModal(healthCheckId) {
            $.ajax({
                url: `https://localhost:7122/api/PricingPolicy/${pricingId}`,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    let html = `<p><strong>Policy ID:</strong> ${data.data.pricingId}</p>`;
                    html += `<p><strong>Weight Range:</strong> ${new Date(data.data.weightRange).toLocaleString()}</p>`;
                    html += `<p><strong>Shipping Method:</strong> ${data.data.shippingMethod}</p>`;
                    html += `<p><strong>Base Price:</strong> ${data.data.basePrice}</p>`;
                    html += `<p><strong>Additional Service Price:</strong> ${data.data.additionalServicePrice}</p>`;
                    html += `<p><strong>Insurance Fee:</strong> ${data.data.insuranceFee}</p>`;
                    html += `<p><strong>Customs Fee:</strong> ${data.data.customsFee}</p>`;
                    html += `<p><strong>Currency:</strong> ${data.data.currency}</p>`;
                    html += `<p><strong>Effective Date:</strong> ${effectiveDate ? new Date(data.data.effectiveDate).toLocaleString() : ''} < /p>`;
                    html += `<p><strong>Expiry Date:</strong> ${expiryDate ? new Date(data.data.expiryDate).toLocaleString() : ''} < /p>`;
                    $('#detailsContent').html(html);
                    $('#details').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function deleteHealthCheck(healthCheckId) {
            $('#confirmDelete').off('click').on('click', function () {
                $.ajax({
                    url: `https://localhost:7122/api/PricingPolicy/${pricingId}`,
                    type: 'DELETE',
                    contentType: 'application/json',
                    success: function () {
                        loadData();
                        $('#deleteConfirmation').modal('hide');
                    },
                    error: function (xhr) {
                        alert(xhr.statusText);
                    }
                });
            });
        }
    </script>
}