@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Create Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">
    Create New
</button>

<!-- Create Modal -->
<div class="modal fade" id="create" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create Packaging Process</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    <div class="form-group">
                        <label for="packagingProcessId" class="control-label">Packaging Process ID</label>
                        <input type="text" id="packagingProcessId" class="form-control" required />
                        <span class="text-danger" id="packagingProcessIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="orderId" class="control-label">Order ID</label>
                        <select id="orderId" class="form-control" required></select>
                        <span class="text-danger" id="orderIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="packagingType" class="control-label">Packaging Type</label>
                        <input type="text" id="packagingType" class="form-control" required />
                        <span class="text-danger" id="packagingTypeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="packagingInstructions" class="control-label">Packaging Instructions</label>
                        <input type="text" id="packagingInstructions" class="form-control" required />
                        <span class="text-danger" id="packagingInstructionsError"></span>
                    </div>
                    <div class="form-group">
                        <label for="packagingDate" class="control-label">Packaging Date</label>
                        <input type="datetime-local" id="packagingDate" class="form-control" required />
                        <span class="text-danger" id="packagingDateError"></span>
                    </div>
                    <div class="form-group">
                        <label for="handlerName" class="control-label">Handler Name</label>
                        <input type="text" id="handlerName" class="form-control" required />
                        <span class="text-danger" id="handlerNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="qualityCheckStatus" class="control-label">Quality Check Status</label>
                        <input type="text" id="qualityCheckStatus" class="form-control" required />
                        <span class="text-danger" id="qualityCheckStatusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="remarks" class="control-label">Remarks</label>
                        <input type="text" id="remarks" class="form-control" />
                        <span class="text-danger" id="remarksError"></span>
                    </div>
                    <div class="form-group">
                        <label for="estimatedPackagingTime" class="control-label">Estimated Packaging Time</label>
                        <input type="datetime-local" id="estimatedPackagingTime" class="form-control" required />
                        <span class="text-danger" id="estimatedPackagingTimeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="actualPackagingTime" class="control-label">Actual Packaging Time</label>
                        <input type="datetime-local" id="actualPackagingTime" class="form-control" />
                        <span class="text-danger" id="actualPackagingTimeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="packagingCost" class="control-label">Packaging Cost</label>
                        <input type="number" id="packagingCost" class="form-control" />
                        <span class="text-danger" id="packagingCostError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input form="createForm" type="button" value="Create" class="btn btn-primary" onclick="submitPackagingProcessForm()" />
            </div>
        </div>
    </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Packaging Process</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editPackagingProcessId" />
                    <div class="form-group">
                        <label for="editOrderId" class="control-label">Order ID</label>
                        <select id="editOrderId" class="form-control" required></select>
                    </div>
                    <div class="form-group">
                        <label for="editPackagingType" class="control-label">Packaging Type</label>
                        <input type="text" id="editPackagingType" class="form-control" required />
                        <span class="text-danger" id="editPackagingTypeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editPackagingInstructions" class="control-label">Packaging Instructions</label>
                        <input type="text" id="editPackagingInstructions" class="form-control" required />
                        <span class="text-danger" id="editPackagingInstructionsError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editPackagingDate" class="control-label">Packaging Date</label>
                        <input type="datetime-local" id="editPackagingDate" class="form-control" required />
                        <span class="text-danger" id="editPackagingDateError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editHandlerName" class="control-label">Handler Name</label>
                        <input type="text" id="editHandlerName" class="form-control" required />
                        <span class="text-danger" id="editHandlerNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editQualityCheckStatus" class="control-label">Quality Check Status</label>
                        <input type="text" id="editQualityCheckStatus" class="form-control" required />
                        <span class="text-danger" id="editQualityCheckStatusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editRemarks" class="control-label">Remarks</label>
                        <input type="text" id="editRemarks" class="form-control" />
                        <span class="text-danger" id="editRemarksError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editEstimatedPackagingTime" class="control-label">Estimated Packaging Time</label>
                        <input type="datetime-local" id="editEstimatedPackagingTime" class="form-control" required />
                        <span class="text-danger" id="editEstimatedPackagingTimeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editActualPackagingTime" class="control-label">Actual Packaging Time</label>
                        <input type="datetime-local" id="editActualPackagingTime" class="form-control" />
                        <span class="text-danger" id="editActualPackagingTimeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editPackagingCost" class="control-label">Packaging Cost</label>
                        <input type="number" id="editPackagingCost" class="form-control" />
                        <span class="text-danger" id="editPackagingCostError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input form="editForm" type="button" value="Save Changes" class="btn btn-primary" onclick="updatePackagingProcess()" />
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="details" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="detailsModalLabel">PackagingProcesses Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent">
                <!-- Nội dung chi tiết sẽ được thêm vào đây qua JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmation" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteConfirmationLabel">Confirm Deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this PackagingProcesses ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
@*             <th>PackagingProcessID</th>
 *@            <th>PackagingType</th>
            <th>PackagingInstructions</th>
            <th>PackagingDate</th>
            <th>HandlerName</th>
            <th>QualityCheckStatus</th>
            <th>Remarks</th>
            <th>EstimatedPackagingTime</th>
            <th>ActualPackagingTime</th>
            <th>PackagingCost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="PackagingProcesses">
</table>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loadData();
            loadOrderData();
        });

        function loadData() {
            $.ajax({
                url: 'https://localhost:7122/api/PackagingProcesses',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += '<tr>';
                      //  html += '<td>' + item.packagingProcessId + '</td>';
                        html += '<td>' + item.packagingType + '</td>';
                        html += '<td>' + item.packagingInstructions + '</td>';
                        html += '<td>' + (item.packagingDate !== null ? new Date(item.packagingDate).toLocaleDateString() : 'N/A') + '</td>';
                        html += '<td>' + item.handlerName + '</td>';
                        html += '<td>' + item.qualityCheckStatus + '</td>';
                        html += '<td>' + item.remarks + '</td>';
                        html += '<td>' + (item.estimatedPackagingTime !== null ? new Date(item.estimatedPackagingTime).toLocaleString() : 'N/A') + '</td>';
                        html += '<td>' + (item.actualPackagingTime !== null ? new Date(item.actualPackagingTime).toLocaleString() : 'N/A') + '</td>';
                        html += '<td>' + (item.packagingCost !== null ? item.packagingCost.toFixed(2) + ' USD' : 'N/A') + '</td>';
                        html += '<td>';
                        html += `<a href="#" onclick="showEditModal(${item.packagingProcessId})">Edit</a> | `;
                        html += `<a href="#" onclick="showDetailsModal(${item.packagingProcessId})">Details</a> | `;
                        html += `<a href="#" data-bs-toggle="modal" data-bs-target="#deleteConfirmation" onclick="deleteShipment(${item.packagingProcessId})">Delete</a>`;
                        html += '</td>';
                        html += '</tr>';
                    });
                    $('.PackagingProcesses').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }     
        function loadOrderData() {
            $.ajax({
                url: 'https://localhost:7122/api/ShipmentOrders',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += `<option value="${item.orderId}">${item.orderId}</option>`;
                    });
                    $('#orderId, #editOrderId').append(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function submitPackagingProcessForm() {
            const formData = {
                PackagingProcessId: $('#packagingProcessId').val(),
                PackagingType: $('#packagingType').val(),
                PackagingInstructions: $('#packagingInstructions').val(),
                PackagingDate: $('#packagingDate').val(),
                HandlerName: $('#handlerName').val(),
                QualityCheckStatus: $('#qualityCheckStatus').val(),
                Remarks: $('#remarks').val(),
                EstimatedPackagingTime: $('#estimatedPackagingTime').val(),
                ActualPackagingTime: $('#actualPackagingTime').val(),
                PackagingCost: $('#packagingCost').val(),
                OrderId: $('#orderId').val()
            };
            if (formData.OrderId === "0") {
                alert("Please select a valid Order ID.");
                return;
            }
            $.ajax({
                url: 'https://localhost:7122/api/PackagingProcesses',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#createForm')[0].reset();
                    $('#create').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }



        function showEditModal(packagingProcessId) {
            $.ajax({
                url: `https://localhost:7122/api/PackagingProcesses/${packagingProcessId}`,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $('#editPackagingProcessId').val(data.data.packagingProcessId);
                    $('#editOrderId').val(data.data.orderId);
                    $('#editPackagingType').val(data.data.packagingType);
                    $('#editPackagingInstructions').val(data.data.packagingInstructions);
                    $('#editPackagingDate').val(data.data.packagingDate);
                    $('#editHandlerName').val(data.data.handlerName);
                    $('#editQualityCheckStatus').val(data.data.qualityCheckStatus);
                    $('#editRemarks').val(data.data.remarks);
                    $('#editEstimatedPackagingTime').val(data.data.estimatedPackagingTime);
                    $('#editActualPackagingTime').val(data.data.actualPackagingTime);
                    $('#editPackagingCost').val(data.data.packagingCost);
                    $('#edit').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }
        function updatePackagingProcess() {
            const formData = {
                PackagingProcessId: $('#editPackagingProcessId').val(),
                OrderId: $('#editOrderId').val(),
                PackagingType: $('#editPackagingType').val(),
                PackagingInstructions: $('#editPackagingInstructions').val(),
                PackagingDate: $('#editPackagingDate').val(),
                HandlerName: $('#editHandlerName').val(),
                QualityCheckStatus: $('#editQualityCheckStatus').val(),
                Remarks: $('#editRemarks').val(),
                EstimatedPackagingTime: $('#editEstimatedPackagingTime').val(),
                ActualPackagingTime: $('#editActualPackagingTime').val(),
                PackagingCost: $('#editPackagingCost').val(),
            };

            $.ajax({
                url: `https://localhost:7122/api/PackagingProcesses/${formData.PackagingProcessId}`,
                type: "PUT",
                contentType: "application/json;charset=utf-8",
                data: JSON.stringify(formData),
                success: function (data) {
                    loadData();
                    $('#edit').modal('hide');
                    alert('Cập nhật Packaging Process thành công');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function showDetailsModal(packagingProcessId) {
            $.ajax({
                url: 'https://localhost:7122/api/PackagingProcesses/' + packagingProcessId,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var item = result.data;
                    var detailsHtml = `
                                <p><strong>Packaging Type:</strong> ${item.packagingType}</p>
                                <p><strong>Packaging Instructions:</strong> ${item.packagingInstructions}</p>
                                <p><strong>Packaging Date:</strong> ${item.packagingDate ? new Date(item.packagingDate).toLocaleDateString() : 'N/A'}</p>
                                <p><strong>Handler Name:</strong> ${item.handlerName}</p>
                                <p><strong>Quality Check Status:</strong> ${item.qualityCheckStatus}</p>
                                <p><strong>Remarks:</strong> ${item.remarks || 'N/A'}</p>
                                <p><strong>Estimated Packaging Time:</strong> ${item.estimatedPackagingTime ? new Date(item.estimatedPackagingTime).toLocaleString() : 'N/A'}</p>
                                <p><strong>Actual Packaging Time:</strong> ${item.actualPackagingTime ? new Date(item.actualPackagingTime).toLocaleString() : 'N/A'}</p>
                                <p><strong>Packaging Cost:</strong> ${item.packagingCost ? item.packagingCost.toFixed(2) + ' USD' : 'N/A'}</p>
                            `;
                    $('#detailsContent').html(detailsHtml);
                    $('#details').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }


        function deleteShipment(packagingProcessId) {
            $('#confirmDelete').off('click').on('click', function () {
                $.ajax({
                    url: 'https://localhost:7122/api/PackagingProcesses/' + packagingProcessId,
                    type: 'DELETE',
                    contentType: 'application/json',
                    success: function () {
                        loadData();
                        $('#deleteConfirmation').modal('hide');
                    },
                    error: function (xhr) {
                        alert(xhr.statusText);
                    }
                });
            });
        }

    </script>
}
