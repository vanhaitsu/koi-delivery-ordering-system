@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Create Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">
    Create New
</button>

<!-- Create Modal -->
<div class="modal fade" id="create" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create Shipment Tracking</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    <div class="form-group">
                        <label for="trackingId" class="control-label">Tracking ID</label>
                        <input type="number" id="trackingId" class="form-control" required />
                        <span class="text-danger" id="trackingIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="shipperId" class="control-label">Shipper</label>
                        <select id="shipperId" class="form-control" required></select>
                        <span class="text-danger" id="shipperIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="orderId" class="control-label">Order ID</label>
                        <select id="orderId" class="form-control" required>
                            <option value="0">0</option>
                        </select>
                        <span class="text-danger" id="orderIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="updateTime" class="control-label">Update Time</label>
                        <input type="datetime-local" id="updateTime" class="form-control" required />
                        <span class="text-danger" id="updateTimeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="currentLocation" class="control-label">Current Location</label>
                        <input type="text" id="currentLocation" class="form-control" required />
                        <span class="text-danger" id="currentLocationError"></span>
                    </div>
                    <div class="form-group">
                        <label for="shipmentStatus" class="control-label">Shipment Status</label>
                        <input type="text" id="shipmentStatus" class="form-control" required />
                        <span class="text-danger" id="shipmentStatusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="temperatureDuringTransit" class="control-label">Temperature During Transit</label>
                        <input type="number" id="temperatureDuringTransit" class="form-control" />
                        <span class="text-danger" id="temperatureError"></span>
                    </div>
                    <div class="form-group">
                        <label for="humidityDuringTransit" class="control-label">Humidity During Transit</label>
                        <input type="number" id="humidityDuringTransit" class="form-control" />
                        <span class="text-danger" id="humidityError"></span>
                    </div>
                    <div class="form-group">
                        <label for="handlerName" class="control-label">Handler Name</label>
                        <input type="text" id="handlerName" class="form-control" />
                        <span class="text-danger" id="handlerNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="remarks" class="control-label">Remarks</label>
                        <input type="text" id="remarks" class="form-control" />
                        <span class="text-danger" id="remarksError"></span>
                    </div>
                    <div class="form-group">
                        <label for="estimatedArrival" class="control-label">Estimated Arrival</label>
                        <input type="datetime-local" id="estimatedArrival" class="form-control" required />
                        <span class="text-danger" id="estimatedArrivalError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input form="create" type="button" value="Create" class="btn btn-primary" onclick="submitForm()" />
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editModalLabel">Edit Shipment Tracking</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editTrackingId" />
                    <div class="form-group">
                        <label for="editShipperId" class="control-label">Shipper</label>
                        <select id="editShipperId" class="form-control" required></select>
                    </div>
                    <div class="form-group">
                        <label for="editOrderId" class="control-label">Order ID</label>
                        <select id="editOrderId" class="form-control" required></select>
                    </div>
                    <div class="form-group">
                        <label for="editUpdateTime" class="control-label">Update Time</label>
                        <input type="datetime-local" id="editUpdateTime" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="editCurrentLocation" class="control-label">Current Location</label>
                        <input type="text" id="editCurrentLocation" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="editShipmentStatus" class="control-label">Shipment Status</label>
                        <input type="text" id="editShipmentStatus" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="editTemperatureDuringTransit" class="control-label">Temperature During Transit</label>
                        <input type="number" id="editTemperatureDuringTransit" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editHumidityDuringTransit" class="control-label">Humidity During Transit</label>
                        <input type="number" id="editHumidityDuringTransit" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editHandlerName" class="control-label">Handler Name</label>
                        <input type="text" id="editHandlerName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editRemarks" class="control-label">Remarks</label>
                        <input type="text" id="editRemarks" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="editEstimatedArrival" class="control-label">Estimated Arrival</label>
                        <input type="datetime-local" id="editEstimatedArrival" class="form-control" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="button" value="Save Changes" class="btn btn-primary" onclick="updateShipment()" />
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="details" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="detailsModalLabel">Shipment Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmation" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteConfirmationLabel">Confirm Deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this shipment tracking?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Order</th>
            <th>Current Location</th>
            <th>Shipment Status</th>
            <th>Handler Name</th>
            <th>Estimated Arrival</th>
            <th>Update Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="ShipmentTrackings"></tbody>
</table>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loadData();
            loadShipperData();
            loadOrderData();
        });

        function loadData() {
            $.ajax({
                url: 'https://localhost:7122/api/ShipmentTrackings',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += '<tr>';
                        var orderDetails = item.order.shipmentOrderDetails.map(function (order) {
                            return `(${order.animalType.description}) ${order.description}`;
                        }).join('<br>');
                        html += '<td>' + orderDetails + '</td>';
                        html += '<td>' + item.currentLocation + '</td>';
                        html += '<td>' + item.shipmentStatus + '</td>';
                        html += '<td>' + item.handlerName + '</td>';
                        html += '<td>' + new Date(item.estimatedArrival).toLocaleString() + '</td>';
                        html += '<td>' + new Date(item.updateTime).toLocaleString() + '</td>';
                        html += '<td>';
                        html += `<a href="#" onclick="showEditModal(${item.trackingId})">Edit</a> | `;
                        html += `<a href="#" onclick="showDetailsModal(${item.trackingId})">Details</a> | `;
                        html += `<a href="#" data-bs-toggle="modal" data-bs-target="#deleteConfirmation" onclick="deleteShipment(${item.trackingId})">Delete</a>`;
                        html += '</td>';
                        html += '</tr>';
                    });
                    $('.ShipmentTrackings').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function loadShipperData() {
            $.ajax({
                url: 'https://localhost:7122/api/Shippers',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += `<option value="${item.shipperId}">${item.fullName}</option>`;
                    });
                    $('#shipperId, #editShipperId').append(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function loadOrderData() {
            $.ajax({
                url: 'https://localhost:7122/api/ShipmentOrders',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += `<option value="${item.orderId}">${item.orderId}</option>`;
                    });
                    $('#orderId, #editOrderId').append(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function submitForm() {
            const formData = {
                TrackingId: $('#trackingId').val(),
                ShipperId: $('#shipperId').val(),
                OrderId: $('#orderId').val(),
                UpdateTime: $('#updateTime').val(),
                CurrentLocation: $('#currentLocation').val(),
                ShipmentStatus: $('#shipmentStatus').val(),
                TemperatureDuringTransit: $('#temperatureDuringTransit').val(),
                HumidityDuringTransit: $('#humidityDuringTransit').val(),
                HandlerName: $('#handlerName').val(),
                Remarks: $('#remarks').val(),
                EstimatedArrival: $('#estimatedArrival').val(),
            };

            $.ajax({
                url: 'https://localhost:7122/api/ShipmentTrackings',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#create').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function showEditModal(trackingId) {
            $.ajax({
                url: `https://localhost:7122/api/ShipmentTrackings/${trackingId}`,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $('#editTrackingId').val(data.data.trackingId);
                    $('#editShipperId').val(data.data.shipperId);
                    $('#editOrderId').val(data.data.orderId);
                    $('#editUpdateTime').val(data.data.updateTime);
                    $('#editCurrentLocation').val(data.data.currentLocation);
                    $('#editShipmentStatus').val(data.data.shipmentStatus);
                    $('#editTemperatureDuringTransit').val(data.data.temperatureDuringTransit);
                    $('#editHumidityDuringTransit').val(data.data.humidityDuringTransit);
                    $('#editHandlerName').val(data.data.handlerName);
                    $('#editRemarks').val(data.data.remarks);
                    $('#editEstimatedArrival').val(data.data.estimatedArrival);
                    $('#edit').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function updateShipment() {
            const formData = {
                TrackingId: $('#editTrackingId').val(),
                ShipperId: $('#editShipperId').val(),
                OrderId: $('#editOrderId').val(),
                UpdateTime: $('#editUpdateTime').val(),
                CurrentLocation: $('#editCurrentLocation').val(),
                ShipmentStatus: $('#editShipmentStatus').val(),
                TemperatureDuringTransit: $('#editTemperatureDuringTransit').val(),
                HumidityDuringTransit: $('#editHumidityDuringTransit').val(),
                HandlerName: $('#editHandlerName').val(),
                Remarks: $('#editRemarks').val(),
                EstimatedArrival: $('#editEstimatedArrival').val(),
            };

            $.ajax({
                url: `https://localhost:7122/api/ShipmentTrackings/${formData.TrackingId}`,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#edit').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function showDetailsModal(trackingId) {
            $.ajax({
                url: `https://localhost:7122/api/ShipmentTrackings/${trackingId}`,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    let html = `<p><strong>Tracking ID:</strong> ${data.data.trackingId}</p>`;
                    html += `<p><strong>Current Location:</strong> ${data.data.currentLocation}</p>`;
                    html += `<p><strong>Shipment Status:</strong> ${data.data.shipmentStatus}</p>`;
                    html += `<p><strong>Handler Name:</strong> ${data.data.handlerName}</p>`;
                    html += `<p><strong>Estimated Arrival:</strong> ${new Date(data.data.estimatedArrival).toLocaleString()}</p>`;
                    html += `<p><strong>Update Time:</strong> ${new Date(data.data.updateTime).toLocaleString()}</p>`;
                    $('#detailsContent').html(html);
                    $('#details').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function deleteShipment(trackingId) {
            $('#confirmDelete').off('click').on('click', function () {
                $.ajax({
                    url: `https://localhost:7122/api/ShipmentTrackings/${trackingId}`,
                    type: 'DELETE',
                    contentType: 'application/json',
                    success: function () {
                        loadData();
                        $('#deleteConfirmation').modal('hide');
                    },
                    error: function (xhr) {
                        alert(xhr.statusText);
                    }
                });
            });
        }
    </script>
}
