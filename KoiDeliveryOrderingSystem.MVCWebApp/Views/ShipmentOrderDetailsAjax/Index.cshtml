@model IEnumerable<KoiDeliveryOrderingSystem.Data.Models.ShipmentOrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Create Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">
    Create New
</button>

<!-- Create Modal -->
<div class="modal fade" id="create" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create Shipment Order Detail</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    <div class="form-group">
                        <label for="orderDetailId" class="control-label">Shipment Order Detail Id</label>
                        <input type="number" id="orderDetailId" class="form-control" required />
                        <span class="text-danger" id="orderDetailId"></span>
                    </div>
                    <div class="form-group">
                        <label for="orderId" class="control-label">Order ID</label>
                        <select id="orderId" class="form-control" required>
                            <option value="0">0</option>
                        </select>
                        <span class="text-danger" id="orderIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="animalTypeId" class="control-label">Animal Type ID</label>
                        <select id="animalTypeId" class="form-control" required>
                            <option value="0">0</option>
                        </select>
                        <span class="text-danger" id="animalTypeId"></span>
                    </div>
                    <div class="form-group">
                        <label for="additionalServices" class="control-label">Additional services</label>
                        <input id="additionalServices" class="form-control" required />
                        <span class="text-danger" id="additionalServicesError"></span>
                    </div>
                    <div class="form-group">
                        <label for="fee" class="control-label">Fee</label>
                        <input type="number" id="fee" class="form-control" required />
                        <span class="text-danger" id="feeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="status" class="control-label">Status</label>
                        <input type="text" id="status" class="form-control" required />
                        <span class="text-danger" id="statusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="weight" class="control-label">Weight</label>
                        <input type="number" id="weight" class="form-control" />
                        <span class="text-danger" id="weightError"></span>
                    </div>
                    <div class="form-group">
                        <label for="length" class="control-label">Length</label>
                        <input type="number" id="length" class="form-control" />
                        <span class="text-danger" id="lengthError"></span>
                    </div>
                    <div class="form-group">
                        <label for="dateOfEntry" class="control-label">Date of entry</label>
                        <input type="datetime-local" id="dateOfEntry" class="form-control" />
                        <span class="text-danger" id="dateOfEntryError"></span>
                    </div>
                    <div class="form-group">
                        <label for="gender" class="control-label">Gender</label>
                        <input type="text" id="gender" class="form-control" />
                        <span class="text-danger" id="genderError"></span>
                    </div>
                    <div class="form-group">
                        <label for="color" class="control-label">Color</label>
                        <input type="test" id="color" class="form-control" required />
                        <span class="text-danger" id="colorError"></span>
                    </div>
                    <div class="form-group">
                        <label for="healthStatus" class="control-label">Health status</label>
                        <input type="test" id="healthStatus" class="form-control" required />
                        <span class="text-danger" id="healthStatusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="age" class="control-label">Age</label>
                        <input type="test" id="age" class="form-control" required />
                        <span class="text-danger" id="ageError"></span>
                    </div>
                    <div class="form-group">
                        <label for="achievement" class="control-label">Achievement</label>
                        <input type="test" id="achievement" class="form-control" required />
                        <span class="text-danger" id="achievementError"></span>
                    </div>
                    <div class="form-group">
                        <label for="origin" class="control-label">Origin</label>
                        <input type="test" id="origin" class="form-control" required />
                        <span class="text-danger" id="originError"></span>
                    </div>
                    <div class="form-group">
                        <label for="imageUrl" class="control-label">Image Url</label>
                        <input type="test" id="imageUrl" class="form-control" required />
                        <span class="text-danger" id="imageUrlError"></span>
                    </div>
                    <div class="form-group">
                        <label for="description" class="control-label">Description</label>
                        <input type="test" id="description" class="form-control" required />
                        <span class="text-danger" id="descriptionError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input form="create" type="button" value="Create" class="btn btn-primary" onclick="submitForm()" />
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editModalLabel">Edit Shipment Order Detail</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editShipmentOrderDetailId" />
                    <div class="form-group">
                        <label for="editOrderId" class="control-label">Order ID</label>
                        <select id="editOrderId" class="form-control" required>
                            <option value="0">0</option>
                        </select>
                        <span class="text-danger" id="orderIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editAnimalTypeId" class="control-label">Animal Type ID</label>
                        <select id="editAnimalTypeId" class="form-control" required>
                            <option value="0">0</option>
                        </select>
                        <span class="text-danger" id="animalTypeIdError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editAdditionalServices" class="control-label">Additional services</label>
                        <input id="editAdditionalServices" class="form-control" required />
                        <span class="text-danger" id="additionalServicesError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editFee" class="control-label">Fee</label>
                        <input type="number" id="editFee" class="form-control" required />
                        <span class="text-danger" id="feeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editStatus" class="control-label">Status</label>
                        <input type="text" id="editStatus" class="form-control" required />
                        <span class="text-danger" id="statusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editWeight" class="control-label">Weight</label>
                        <input type="number" id="editWeight" class="form-control" />
                        <span class="text-danger" id="weightError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editLength" class="control-label">Length</label>
                        <input type="number" id="editLength" class="form-control" />
                        <span class="text-danger" id="lengthError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editDateOfEntry" class="control-label">Date of entry</label>
                        <input type="datetime-local" id="editDateOfEntry" class="form-control" />
                        <span class="text-danger" id="dateOfEntryError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editGender" class="control-label">Gender</label>
                        <input type="text" id="editGender" class="form-control" />
                        <span class="text-danger" id="genderError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editColor" class="control-label">Color</label>
                        <input type="test" id="editColor" class="form-control" required />
                        <span class="text-danger" id="colorError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editHealthStatus" class="control-label">Health status</label>
                        <input type="test" id="editHealthStatus" class="form-control" required />
                        <span class="text-danger" id="healthStatusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editAge" class="control-label">Age</label>
                        <input type="test" id="editAge" class="form-control" required />
                        <span class="text-danger" id="ageError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editAchievement" class="control-label">Achievement</label>
                        <input type="test" id="editAchievement" class="form-control" required />
                        <span class="text-danger" id="achievementError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editOrigin" class="control-label">Origin</label>
                        <input type="test" id="editOrigin" class="form-control" required />
                        <span class="text-danger" id="originError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editImageUrl" class="control-label">Image Url</label>
                        <input type="test" id="editImageUrl" class="form-control" required />
                        <span class="text-danger" id="imageUrlError"></span>
                    </div>
                    <div class="form-group">
                        <label for="editDescription" class="control-label">Description</label>
                        <input type="test" id="editDescription" class="form-control" required />
                        <span class="text-danger" id="descriptionError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="button" value="Save Changes" class="btn btn-primary" onclick="updateShipmentOrderDetail()" />
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="details" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="detailsModalLabel">Shipment Order Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmation" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteConfirmationLabel">Confirm Deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this shipment order detail?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Order</th>
            <th>Current Location</th>
            <th>Shipment Status</th>
            <th>Handler Name</th>
            <th>Estimated Arrival</th>
            <th>Update Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="ShipmentTrackings"></tbody>
</table>