@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            loadData();
            loadAnimalTypeData();
            loadOrderData
            loadOrderDetailData();

            $('form').on('submit', function (e) {
                e.preventDefault();
                loadData();
            });
        });

        function loadData(page) {
            var search = $('input[name="search"]').val();
            var status = $('input[name="status"]').val();
            var origin = $('input[name="origin"]').val();
            var orderByDescending = $('select[name="orderByDescending"]').val();
            $.ajax({
                url: 'https://localhost:7122/api/ShipmentOrderDetail',
                type: "GET",
                data: {
                    pageNumber: page,
                    search: search || "",
                    status: status || "",
                    origin: origin || "",
                    orderByDescending: orderByDescending || false
                },
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data.data, function (key, item) {
                        html += '<tr>';

                        // Handle shipmentOrder and animalType if they exist
                        // var orderDetails = item.shipmentOrder
                        //     ? `Order ID: ${item.shipmentOrder.orderId}, Customer ID: ${item.shipmentOrder.customerId}`
                        //     : 'No Order Details';

                        // var animalTypeDesc = item.animalType
                        //     ? item.animalType.description
                        //     : 'N/A';

                        html += '<td>' + (item.shipmentOrderDetailId || 'N/A') + '</td>'; // Order Detail ID
                        html += '<td>' + (item.shipmentOrderId || 'N/A') + '</td>'; // Order ID
                        html += '<td>' + (item.animalType ? item.animalType.description : 'N/A') + '</td>'; // Animal Type Description
                        html += '<td>' + (item.additionalServices || 'N/A') + '</td>'; // Additional Services
                        html += '<td>' + (item.fee || '0') + '</td>'; // Fee
                        html += '<td>' + (item.status || 'N/A') + '</td>'; // Status
                        html += '<td>' + (item.weight || 'N/A') + '</td>'; // Weight
                        html += '<td>' + (item.length || 'N/A') + '</td>'; // Length
                        html += '<td>' + new Date(item.dateOfEntry).toLocaleString() + '</td>'; // Date of Entry
                        html += '<td>' + (item.gender || 'N/A') + '</td>'; // Gender
                        html += '<td>' + (item.color || 'N/A') + '</td>'; // Color
                        html += '<td>' + (item.healthStatus || 'N/A') + '</td>'; // Health Status
                        html += '<td>' + (item.age || 'N/A') + '</td>'; // Age
                        html += '<td>' + (item.achievement || 'N/A') + '</td>'; // Achievement
                        html += '<td>' + (item.origin || 'N/A') + '</td>'; // Origin
                        html += '<td>' + (item.imageUrl || 'N/A') + '</td>'; // Image URL
                        html += '<td>' + (item.description || 'N/A') + '</td>'; // Description
                        html += '<td>';
                        html += `<a href="#" onclick="showEditModal(${item.shipmentOrderDetailId})">Edit</a> | `;
                        html += `<a href="#" onclick="showDetailsModal(${item.shipmentOrderDetailId})">Details</a> | `;
                        html += `<a href="#" data-bs-toggle="modal" data-bs-target="#deleteConfirmation" onclick="deleteShipment(${item.shipmentOrderDetailId})">Delete</a>`;
                        html += '</td>';
                        html += '</tr>';
                    });
                    $('.ShipmentOrderDetails').html(html); // Insert rows into the tbody
                    updatePagination(result.data.totalCount, page);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }
        function updatePagination(totalCount, currentPage) {
            var totalPages = Math.ceil(totalCount / 10);
            var paginationHtml = '';

            for (var i = 1; i <= totalPages; i++) {
                paginationHtml += `<a href="#" class="page-link" onclick="loadData(${i})">${i}</a>`;
                if (i < totalPages) {
                    paginationHtml += ' | ';
                }
            }

            $('.Pagination').html(paginationHtml);
        }

        function loadOrderData() {
            $.ajax({
                url: 'https://localhost:7122/api/ShipmentOrders',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += `<option value="${item.orderId}">${item.orderId}</option>`;
                    });
                    $('#orderId, #editOrderId').append(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function loadAnimalTypeData() {
            $.ajax({
                url: 'https://localhost:7122/api/AnimalType',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += `<option value="${item.animalTypeId}">${item.description}</option>`;
                    });
                    $('#animalTypeId, #editAnimalTypeId').append(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function loadOrderDetailData() {
            $.ajax({
                url: 'https://localhost:7122/api/ShipmentOrderDetail',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += `<option value="${item.orderDetailId}">${item.orderDetailId}</option>`;
                    });
                    $('#orderDetailId, #editOrderDetailId').append(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }

        function submitForm() {
            const formData = {
                ShipmentOrderDetailId: $('#orderDetailId').val(),
                ShipmentOrderId: $('#orderId').val(),
                AnimalTypeId: $('#animalTypeId').val(),
                AdditionalServices: $('#additionalServices').val(),
                Fee: $('#fee').val(),
                Status: $('#status').val(),
                Weight: $('#weight').val(),
                Length: $('#length').val(),
                DateOfEntry: $('#dateOfEntry').val(),
                Gender: $('#gender').val(),
                Color: $('#color').val(),
                HealthStatus: $('#healthStatus').val(),
                Age: $('#age').val(),
                Achievement: $('#achievement').val(),
                Origin: $('#origin').val(),
                ImageUrl: $('#imageUrl').val(),
                Description: $('#description').val(),
            };

            $.ajax({
                url: 'https://localhost:7122/api/ShipmentOrderDetail',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#create').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

        function showEditModal(orderDetailId) {
            $.ajax({
                url: `https://localhost:7122/api/ShipmentOrderDetail/${orderDetailId}`,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $('#editShipmentOrderDetailId').val(data.data.shipmentOrderDetailId);
                    $('#editAnimalTypeId').val(data.data.animalTypeId);
                    $('#editOrderId').val(data.data.shipmentOrderId);
                    $('#editAdditionalServices').val(data.data.additionalServices);
                    $('#editFee').val(data.data.fee);
                    $('#editStatus').val(data.data.status);
                    $('#editWeight').val(data.data.weight);
                    $('#editLength').val(data.data.length);
                    $('#editDateOfEntry').val(data.data.dateOfEntry);
                    $('#editGender').val(data.data.gender);
                    $('#editColor').val(data.data.color);
                    $('#editHealthStatus').val(data.data.healthStatus);
                    $('#editAge').val(data.data.age);
                    $('#editAchievement').val(data.data.achievement);
                    $('#editOrigin').val(data.data.origin);
                    $('#editImageUrl').val(data.data.imageUrl);
                    $('#editDescription').val(data.data.description);
                    $('#edit').modal('show');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
