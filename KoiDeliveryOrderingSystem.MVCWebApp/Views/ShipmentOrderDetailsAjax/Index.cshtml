@model IEnumerable<KoiDeliveryOrderingSystem.MVCWebApp.Models.ShipmentOrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Shipment Order Detail</h1>

<!-- Create Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create">
    Create New
</button>


<form method="get" class="p-4 bg-light shadow-sm rounded">
    <!-- Search Input -->
    <div class="mb-3">
        <label for="search" class="form-label fw-bold">Order Detail ID</label>
        <input type="text" name="search" placeholder="Enter order detail ID" class="form-control border border-primary rounded-pill" />
    </div>

    <!-- Order Status Select -->
    <div class="mb-3">
        <label for="status" class="form-label fw-bold">Order Status</label>
        <input type="text" name="status" placeholder="Enter order's status" class="form-control border border-primary rounded-pill" />
    </div>

    <!-- Sort by Date of Entry -->
    <div class="mb-3">
        <label for="origin" class="form-label fw-bold">Origin</label>
        <input type="text" name="origin" placeholder="Enter origin" class="form-control border border-primary rounded-pill" />
    </div>

    <!-- Submit Button -->
    <div class="text-center">
        <input type="submit" value="Search" class="btn btn-primary btn-lg rounded-pill px-4" />
    </div>
</form>


