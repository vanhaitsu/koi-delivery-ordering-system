        function updateShipmentOrderDetail() {
            const formData = {
                ShipmentOrderDetailId: $('#editShipmentOrderDetailId').val(),
                ShipmentOrderId: $('#editOrderId').val(),
                AnimalTypeId: $('#editAnimalTypeId').val(),
                AdditionalServices: $('#editAdditionalServices').val(),
                Fee: $('#editFee').val(),
                Status: $('#editStatus').val(),
                Weight: $('#editWeight').val(),
                Length: $('#editLength').val(),
                DateOfEntry: $('#editDateOfEntry').val(),
                Gender: $('#editGender').val(),
                Color: $('#editColor').val(),
                HealthStatus: $('#editHealthStatus').val(),
                Age: $('#editAge').val(),
                Achievement: $('#editAchievement').val(),
                Origin: $('#editOrigin').val(),
                ImageUrl: $('#editImageUrl').val(),
                Description: $('#editDescription').val(),
            };

            $.ajax({
                url: `https://localhost:7122/api/ShipmentOrderDetail/${formData.ShipmentOrderDetailId}`,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    loadData();
                    $('#edit').modal('hide');
                },
                error: function (xhr) {
                    alert(xhr.statusText);
                }
            });
        }

